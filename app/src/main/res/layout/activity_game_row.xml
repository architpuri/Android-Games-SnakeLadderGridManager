<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <Button
        android:background="@color/colorYellow"
        android:layout_margin="2dp"
        android:id="@+id/btn_left"
        android:layout_width="70dp"
        android:layout_height="80dp"
        tools:text="1"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:background="@color/colorYellow"
        android:layout_margin="2dp"
        android:layout_marginTop="2dp"
        android:id="@+id/btn_mid_left"
        android:layout_width="70dp"
        android:layout_height="80dp"
        tools:text="1"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/btn_left"/>
    <Button
        android:background="@color/colorYellow"
        android:layout_margin="2dp"
        android:layout_marginTop="2dp"
        android:id="@+id/btn_mid"
        android:layout_width="70dp"
        android:layout_height="80dp"
        tools:text="1"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/btn_mid_left"/>
    <Button
        android:background="@color/colorYellow"
        android:layout_margin="2dp"
        android:layout_marginTop="2dp"
        android:id="@+id/btn_mid_right"
        android:layout_width="70dp"
        android:layout_height="80dp"
        tools:text="1"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/btn_mid"/>
    <Button
        android:background="@color/colorYellow"
        android:layout_margin="2dp"
        android:layout_marginTop="2dp"
        android:id="@+id/btn_right"
        android:layout_width="70dp"
        android:layout_height="80dp"
        tools:text="1"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/btn_mid_right" />

</android.support.constraint.ConstraintLayout>